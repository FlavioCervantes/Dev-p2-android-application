<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Devp2androidapplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
    </style>
    <!-- Custom button style -->
    <style name="BlackButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Custom HighScore button style -->
    <style name="HighScores" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Custom Quit button style -->
    <style name="QuitButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/lightblue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Devp2androidapplication" parent="Base.Theme.Devp2androidapplication" />
</resources>